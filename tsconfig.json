{
  "compilerOptions": {
    "allowJs": false,
    "target": "es5",
    "baseUrl": "./",
    "rootDir": "./",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["es2015", "dom"],
    "paths": {
      "-/*": ["app/*"]
    }
  },
  "include": ["app/**/*.ts", "app/**/*.tsx"]
  // "exclude": [
  //  "node_modules",
  //  "**/node_modules/*",
  //  "extensions",
  //  "cordova",
  //  "web",
  //  "tests"
  //]
}
